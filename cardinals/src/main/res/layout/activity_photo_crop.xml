<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:views.imagecrop="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_photo_crop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhong.cardinals.PhotoCropActivity">

    <com.zhong.cardinals.imagecropview.ImageCropView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        views.imagecrop:gridOuterColor="#ffffff"
        views.imagecrop:setInnerGridMode="off"
        views.imagecrop:setOuterGridMode="off" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:onClick="onCancle"
            android:src="@drawable/crop_cancle" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="133dp"
            android:contentDescription="@null"
            android:onClick="onSure"
            android:src="@drawable/crop_sure" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
